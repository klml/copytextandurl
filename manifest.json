{
    "manifest_version": 2,
    "name": "Copy selected text and URL as link",
    "description": "Copy selected text as linktest with current URL as link.",
    "version": "2.0",
    "homepage_url": "https://github.com/klml/copytextandurl",

    "applications": {
      "gecko": {
        "id": "addon@klml.de",
        "strict_min_version": "48.0"
      }
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "clipboardWrite",
        "storage"
    ]
}
