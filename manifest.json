{
    "manifest_version": 2,
    "name": "Copy selected text and URL as link",
    "description": "Copy selected text as linktest with current URL as link.",
    "version": "1.0.1",
    "homepage_url": "https://github.com/klml/copytextandurl",

    "applications": {
      "gecko": {
        "id": "addon@klml.de",
        "strict_min_version": "48.0"
      }
    },

    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "clipboardWrite"
    ]
}
